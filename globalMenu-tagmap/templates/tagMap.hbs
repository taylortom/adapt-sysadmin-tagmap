<div class="inner">
  <div class="title">
    {{t 'app.tagmap'}}
  </div>
  <div class="description">
    {{t 'app.tagmapdesc'}}
  </div>
  {{#if tags.length}}
    <div class="tb-heading col-row tb-row">
      <div class="col-25">
          <h4 class="tb-col-inner">Name</h4>
      </div>
      <div class="col-75">
          <h4 class="tb-col-inner">Tagged courses</h4>
      </div>
    </div>
    <div class="tags">
      {{#each tags.models}}
        <div class="tag col-row" data-id="{{attributes._id}}">
          <div class="col-25">
            <div class="tb-col-inner">{{attributes.title}}</div>
          </div>
          <div class="col-75">
            <div class="tb-col-inner">
              {{#each attributes.courses}}
                <div class="course">{{this.attributes.displayTitle}}</div>
              {{/each}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    {{t 'app.notags'}}
  {{/if}}
</div>
